        <arguments>
          <argument>
            <kind>1</kind>
            <string>///FINISH A DRAWING
//reset timers and disable drawing if brush meter ran out
brushSpendTimer = 0;
//check for glyphs
var last_valid_shape = TMCT_GetCurrentGesture(0);
//if(last_valid_shape == "CIRCLE") {
//if(drawing_test_circle()) {
if(last_valid_shape == "CIRCLE" &amp;&amp; drawing_test_circle()) {
    //recall void from voided objects
    show_debug_message("CIRCLE drawn");
    var recaller = instance_create(recallCircleX,recallCircleY,obj_recallcircle);
    recaller.r = recallCircleRadius;
    ds_list_add(glyphList,recaller);
}
//if none were found, check for all targetable objects underneath and void them
else {
    var targetList = ds_list_create();
    //assemble list of drawn-over targets
    //show_debug_message("-- CHECKING DRAWING FOR VOIDABLE --");
    for(var i = 0; i &lt; instance_number(obj_drawmark); i++) {
        var thisPoint = instance_find(obj_drawmark,i);
        var thisX = thisPoint.x, thisY = thisPoint.y;
        instance_deactivate_object(obj_drawmark);
        instance_deactivate_object(obj_brush);
        var targetPoint = instance_position(thisX,thisY,all);
        instance_activate_object(obj_brush);
        instance_activate_object(obj_drawmark);
        //var debugStr = "Point " + string(i) + ": targetPoint = ";
        //if(targetPoint != noone) debugStr += object_get_name(targetPoint.object_index);
        //else debugStr += "noone";
        //show_debug_message(debugStr);
        if(checkTargetable(targetPoint,0)) {
            //voidable
            //TODO: check to make this object isn't in the process of being painted
            // already, by checking if it has any obj_drawtarget instances on it
            if(ds_list_find_index(targetList,targetPoint) == -1
                &amp;&amp; !collision_rectangle(targetPoint.x,targetPoint.y,
                    targetPoint.x+targetPoint.sprite_width,
                    targetPoint.y+targetPoint.sprite_height,
                    obj_drawtarget,true,true)) {
                //add new target to list
                ds_list_add(targetList,targetPoint);
            }
        }
    }
    //for each instance in targetList, create targeting object 
    for(var i = 0; i &lt; ds_list_size(targetList); i++) {
        var thisTarget = ds_list_find_value(targetList,i);
        var potential = getTargetableVoid(thisTarget,0);
        if(potential == -1) potential = thisTarget.voidAmount;
        for(var p = 0; p &lt; potential; p++) {
            var targeting = instance_create(
                thisTarget.x+(thisTarget.sprite_width/2),
                thisTarget.y+(thisTarget.sprite_height/2),
                obj_drawtarget);
            targeting.delayTimer = (instance_number(obj_drawtarget)-1) * 10;
            targeting.myTarget = thisTarget;
        }
    }
    ds_list_destroy(targetList);
}
//if more glyphs were added than can be held, remove the front of the list
if(ds_list_size(glyphList) &gt; glyphLimit) {
    var target = ds_list_find_value(glyphList,0);
    with(target) instance_destroy();
    ds_list_delete(glyphList,0);
}
//clear drawing
with(obj_drawmark) instance_destroy();
ds_list_clear(drawing);
TMCT_ClearSegment(0);
TMCT_ClearDeviceData(0);
</string>
